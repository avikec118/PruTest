pipeline {
  agent any
  stages {
    stage ('Build') {
      steps {
            sh 'mvn clean install -DskipTests'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          ARG JAR_FILE=target/*.jar
          COPY ${JAR_FILE} application.jar
          ENTRYPOINT ["java","-jar","/application.jar"]
          java -jar target/spring-boot-helloworld-0.0.1-SNAPSHOT.jar
        }
      }
    }
  }
}
